<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:background="#48E8C872">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_order"
                        android:layout_width="69dp"
                        android:layout_height="70dp"

                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/silverspoon"
                        app:civ_border_color="@color/teal_200"
                        app:civ_border_width="1dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp">

                        <TextView

                            android:id="@+id/tvorder_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#12334"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/black">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SilverSpoons althan,suart"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp">

                    </TextView>



                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User id"
                    android:textSize="11dp"
                    android:textColor="@color/black">

                </TextView>



                <TextView
                    android:id="@+id/userid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <TextView

                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-03-12"
                    android:textSize="10dp"
                    android:textColor="@color/black">

                </TextView>



                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rs.115.0"
                    android:textSize="11dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">




                <TextView
                    android:id="@+id/tvpay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="online"
                    android:textSize="11dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone">

                </TextView>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_view_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Order"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/teal_200"/>

            </LinearLayout>









        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>